<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected, use green border -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- background color -->
            <stroke android:width="2dp" android:color="#212121"/> <!-- green border -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Default state, now with a black border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- background color -->
            <stroke android:width="2dp" android:color="#e8e8e8"/> <!-- black border -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>